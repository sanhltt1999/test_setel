<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.example.setel.utility.DateTimeUtil" />

        <variable
            name="operatingTime"
            type="com.example.setel.ui.home.model.OperatingTimeModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="4"
                android:text="@{operatingTime.day}"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:text="@{DateTimeUtil.INSTANCE.getTimeFromMinutes(operatingTime.timeStart)}"
                android:textColor="@color/primary_text_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="3"
                android:text="@{DateTimeUtil.INSTANCE.getTimeFromMinutes(operatingTime.timeClose)}"
                android:textColor="@color/primary_text_color" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>
